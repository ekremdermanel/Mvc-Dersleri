@model Yorum

<h2>Yorum Ekle</h2>

<form method="post">

    <div class="mb-3">
        <label asp-for="Konu"></label>
        <input asp-for="Konu" class="form-control">
        <span asp-validation-for="Konu" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Mesaj"></label>
        <input asp-for="Mesaj" class="form-control">
        <span asp-validation-for="Mesaj" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Puan"></label>
        <input asp-for="Puan" class="form-control">
        <span asp-validation-for="Puan" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Tamam</button>

</form>