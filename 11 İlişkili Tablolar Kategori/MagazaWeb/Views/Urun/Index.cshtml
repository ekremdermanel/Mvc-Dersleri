@model List<Urun>

<h2>@ViewBag.ListeBasligi</h2>

<!-- Urun Listesi -->
<div class="row row-cols-2 row-cols-lg-3 g-3">

    @foreach (var item in Model)
    {       
        <!-- Urun -->
        <div class="col">
            <div class="card">
                <img class="card-img-top" src="~/image/urun.png" alt="..." />
                <div class="card-body text-center">
                    <h5 class="card-title">@item.UrunAdi</h5>
                    <p class="card-text small">@item.Fiyat TL</p>
                    <p class="card-text small">@item.Kategori.KategoriAdi</p>
                    <a class="btn btn-outline-primary btn-sm" asp-controller="Urun" asp-action="Detay" asp-route-id="@item.Id">Detay</a>
                </div>
            </div>
        </div>
    }
</div>