@model List<Urun>

<h1 class="mb-3">Liste</h1>
<a asp-action="Ekle" class="btn btn-success mb-3">Ekle</a>

@foreach (var item in Model)
{
    <div class="p-3 mb-3 border">
        <h3>@item.UrunAdi</h3>
        <p>@item.Fiyat TL</p>
        <a asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-primary">Güncelle</a>
        <a asp-action="Sil" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
    </div>
}
